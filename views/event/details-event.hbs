<div class="container">
    <div class="row">
        <h1 style="font-weight: 100">{{events.title}}</h1>
        <div class="col-6">
            <img src="{{events.eventImage}}" alt="{{events.title}}" class="img-thumbnail">
        </div>
        <div class="col-6">
            <p>{{events.description}}</p>
            <small><strong>Date: </strong> {{events.time}} | <strong>Capacity: </strong> {{events.capacity}} |
                <strong>Latitude: </strong>
                <p name="lat" id="latitude">{{events.address.coordinates.[0]}}</p>
                <strong>Longitude: </strong>
                <p name="lng" id="longitude">{{events.address.coordinates.[1]}}</p>

                <form action="/event/{{events._id}}/edit" method="GET" class="col-12 col-sm-6 col-md-4">
                    <button type="submit" class="btn btn-warning">EDIT</button>
                </form>
                <a href="/event" class="btn btn-dark">Go back</a>
        </div>
    </div>
    <hr>
    <figure id="myMap"></figure>

    <a id="commnet-btn" class="btn btn-dark btn-open-review">Escribir reseña</a>

    <div id="comment" class="container-all">

        <form action="/commnet/new" method="POST">
            <label for="title">Título</label>
            <input type="text" class="form-control" id="title" name="title">
            <label for="description">Descripción</label>
            <input type="text" class="form-control" id="description" name="description">
            <button type="submit" class="btn btn-dark">Enviar</button>
            <button class="btn btn-dark hideForm">Volver</button>
        </form>
    </div>

    <script src="/js/mapStyles.js"></script>
    <script src="https://unpkg.com/axios/dist/axios.min.js"></script>
    <script src="/js/drawMap.js"></script>
    <script
        src="https://maps.googleapis.com/maps/api/js?key=AIzaSyBoajqXibWJz4sOq2ROb_U-8TdlpWx_Cds&callback=initMap"></script>

</div>