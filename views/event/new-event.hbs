<div class="container">

    <div class="row">

        <div class="col-md-6">
            <h1 style="font-weight: 100">Create new event</h1>
        </div>

        <div class="col-md-6">

            <form action="/event/new" method="POST">
                <div class="form-group">
                    <label for="title">Title</label>
                    <input name="title" type="text" class="form-control" id="title">
                </div>
                <div class="form-group">
                    <label for="description">Description</label>
                    <input name="description" type="text" class="form-control" id="description">
                </div>
                <div class="form-group">
                    <label for="capacity">Capacity</label>
                    <input name="capacity" type="number" class="form-control" id="capacity">
                </div>
                <div class="form-group">
                    <label for="date">Date</label>
                    <input name="date" type="date" class="form-control" id="date">
                </div>
                <div class="form-group">
                    <label for="eventImage">Event image</label>
                    <input name="eventImage" type="text" class="form-control" id="eventImage">
                </div>
                <div class="form-group">
                    <div class="row">
                        <div class="col-md-6">
                            <label for="address">Address</label>
                            <input id="address" type="text" value="Madrid, SPAIN" />
                            <input type="text" name="lat" id="location-lat">
                            <input type="text" name="lng" id="location-lng">
                            <button type="button" id="submit" name="address">Locate!</button>
                            <p id="error-msg"></p>
                        </div>
                        <div class="col-md-6">
                            <div id="map-canvas"></div>
                        </div>
                    </div>
                </div>
                <figure id="myMap"></figure>

                <button type="submit" class="btn btn-dark">Create event</button>
                <a href="/event" class="btn btn-dark">Go back</a>

            </form>
        </div>

    </div>
    <script src="/js/mapStyles.js"></script>
    <script src="https://unpkg.com/axios/dist/axios.min.js"></script>
    <script src="/js/place-map-setup.js"></script>
    <script
        src="https://maps.googleapis.com/maps/api/js?key=AIzaSyBoajqXibWJz4sOq2ROb_U-8TdlpWx_Cds&callback=initMap"></script>
</div>