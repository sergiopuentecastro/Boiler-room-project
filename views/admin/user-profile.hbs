<div class="container">
    <div class="row">
        <div class="col-12 profile-user">
            <div class="card" style="width: 18rem">
                <img src="{{user.profileImage}}" class="card-img-top" alt="{{user.userName}}">
                <div class="card-body">
                    <h5 class="card-title">Nombre: {{user.userName}}</h5>
                    <p>Rol: {{user.role}}</p>
                    <form action="/admin/{{user._id}}/user-delete" method="POST">
                        <button type="submit" class="btn btn-outline-warning">Eliminar</button>
                    </form>

                    <form action="/admin/{{user._id}}/change-role" method="POST">
                        <select name="role" id="role">
                            <option value="US">Usuario</option>
                            <option value="PR">Productor</option>
                        </select>
                        <button type="submit" class="btn btn-outline-dark">Cambiar Rol</button>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>


